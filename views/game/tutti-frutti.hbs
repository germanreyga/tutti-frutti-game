<main role="main" class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Tutti-frutti</h1>
            <h2 class="text-center">You're player: <span class="player-data"></span></h2>
            <hr />
            <div class="waiting-room">
                <div class="alert alert-primary waiting-players-alert" role="alert">
                    Waiting for other players to join...
                </div>
                <div class="alert alert-warning waiting-finish-alert" role="alert">

                </div>
                <button class="btn btn-primary btn-lg btn-block start-btn">Start game</button>
            </div>
            <div class="board">
                <h2 class="text-center">Round letter is: <span class="round-letter badge badge-pill badge-info"></span>
                </h2>
                <h2 class="text-center">
                    <span class="timer text-center badge badge-pill badge-danger"></span>
                </h2>
                <div class="alert alert-danger word-error" role="alert">
                </div>
                <div class="row">
                    <form class="col-4 name-form">
                        <div class="form-group">
                            <label>Add a word for: Name</label>
                            <div class="category" hidden>Name</div>
                            <input type="text" class="form-control word" placeholder="...">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Add word</button>
                    </form>
                    <form class="col-4 color-form">
                        <div class="form-group">
                            <label>Add a word for: Color</label>
                            <div class="category" hidden>Color</div>
                            <input type="text" class="form-control word" placeholder="...">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Add word</button>
                    </form>
                    <form class="col-4 fruit-form">
                        <div class="form-group">
                            <label>Add a word for: Fruit</label>
                            <div class="category" hidden>Fruit</div>
                            <input type="text" class="form-control word" placeholder="...">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Add word</button>
                    </form>
                </div>
                <br>
                <div class="row"><button type="submit"
                        class="btn btn-success btn-lg btn-block tutti-frutti-btn">Tutti-frutti
                        (Basta)</button>
                </div>

                <br />
                <div class="card text-center">
                    <div class="card-header">Your current word list</div>
                    <div class="card-body">
                        <ul class="word-list"></ul>
                    </div>
                </div>
            </div>
            <br />
            <div class="results">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Player ID</th>
                            <th scope="col">Words</th>
                            <th scope="col">Total score</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="alert alert-success winner-alert" role="alert"></div>
                <button class="btn btn-success btn-lg btn-block restart-btn">Restart the game</button>
                <br />
            </div>
</main>